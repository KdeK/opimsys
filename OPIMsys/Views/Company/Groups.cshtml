@model IEnumerable<OPIMsys.Models.Group>

@{
    ViewBag.Title = "Groups";
}

<h2>Groups</h2>

<p>
    @Html.ActionLink("Create New", "UpdateGroup", new { id = 0 })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateGroup", new { id=item.GroupId }) |
            @Html.ActionLink("Delete", "DeleteGroup", new { id=item.GroupId })
        </td>
    </tr>
}

</table>
