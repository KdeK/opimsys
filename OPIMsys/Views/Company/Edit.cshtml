@model OPIMsys.Models.Company

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Company</legend>

        @Html.HiddenFor(model => model.CompanyId)
        @Html.HiddenFor(model => model.Revision)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.LogoURL)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LogoURL)
            @Html.ValidationMessageFor(model => model.LogoURL)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.CompanyId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
