@model IEnumerable<OPIMsys.Models.Language>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateLanguage")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditLanguage", new { id=item.LanguageId }) |
            @Html.ActionLink("Delete", "DeleteLanguage", new { id=item.LanguageId })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Back to settings", "Index")